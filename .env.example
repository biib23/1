# Django environment variables for production deployment

SECRET_KEY=your-production-secret-key
DEBUG=False
ALLOWED_HOSTS=.railway.app,localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=https://yourapp.railway.app,http://localhost:8000
DATABASE_URL=postgres://user:password@host:port/dbname
STUDENT_ACCESS_CODE=ben25

# Security settings (optional, defaults are secure for production)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin
